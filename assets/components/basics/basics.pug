.mb-5
    .text-4xl.weight-bold=resume.basics.name
    .text-2xl.weight-bold.mb-2=resume.basics.label

    ul
        li=helper.calcLocation(resume.basics.location)
        //li=resume.basics.phone
        li
            a.text-blue-500(href="mailto:"+resume.basics.email)=resume.basics.email
        li
            a.text-blue-500(href=resume.basics.url, target="_blank")=resume.basics.url

    if resume.basics.summary
        .my-5!=helper.mdToHtml(resume.basics.summary)

    .flex.flex-col(class="sm:flex-row")
        each profile in resume.basics.profiles 
            div(class="sm:mr-5")
                strong=profile.network
                |:
                |
                a.text-blue-500(href=profile.url, target="_blank")
                    = profile.username  